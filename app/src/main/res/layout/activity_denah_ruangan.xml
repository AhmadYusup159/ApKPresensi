<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.denah.DenahRuanganActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDenahRuangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Denah Ruangan"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:src="@drawable/arrow_back"
            android:background="@android:color/transparent"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_labTek1lt1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_labTek1lt1"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/labtek1lt1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_labTek1lt1"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textAlignment="center"
                        android:text="Gedung LabTek 1 Lantai 1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@id/img_labTek1lt1"
                        app:layout_constraintTop_toTopOf="@id/img_labTek1lt1" />


                    <TextView
                        android:id="@+id/tv_gedungLabTek1Lt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_gedung"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Gedung LABTEK.1 - Lantai 1"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_labTek1lt1"
                        app:layout_constraintTop_toBottomOf="@+id/img_labTek1lt1" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_labTek1lt2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_labTek1lt2"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/labtek1lt2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_labTek1lt2"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textAlignment="center"
                        android:text="Gedung LabTek 1 Lantai 2"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@id/img_labTek1lt2"
                        app:layout_constraintTop_toTopOf="@id/img_labTek1lt2" />


                    <TextView
                        android:id="@+id/tv_gedungLabTek1Lt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_gedung"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Gedung LABTEK.1 - Lantai 2"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_labTek1lt2"
                        app:layout_constraintTop_toBottomOf="@+id/img_labTek1lt2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_fakTek1lt1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_fakTek1Lt1"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/faktek1lt1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_fakTek1Lt1"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textAlignment="center"
                        android:text="Gedung Fakultas Teknik 1 - Lantai 1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@id/img_fakTek1Lt1"
                        app:layout_constraintTop_toTopOf="@id/img_fakTek1Lt1" />


                    <TextView
                        android:id="@+id/tv_gedungFakTek1Lt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:drawableLeft="@drawable/icon_gedung"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Gedung Fakultas Teknik 1 - Lantai 1"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_fakTek1Lt1"
                        app:layout_constraintTop_toBottomOf="@+id/img_fakTek1Lt1" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_fakTek1lt2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="6dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_fakTek1Lt2"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/faktek1lt2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_fakTek1Lt2"
                        android:layout_width="225dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textAlignment="center"
                        android:text="Gedung Fakultas Teknik 1 - Lantai 2"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="@id/img_fakTek1Lt2"
                        app:layout_constraintTop_toTopOf="@id/img_fakTek1Lt2" />


                    <TextView
                        android:id="@+id/tv_gedungFakTek1Lt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:drawableLeft="@drawable/icon_gedung"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Gedung Fakultas Teknik 1 - Lantai 2"
                        android:textColor="#8E8E8E"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_fakTek1Lt2"
                        app:layout_constraintTop_toBottomOf="@+id/img_fakTek1Lt2" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"/>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>